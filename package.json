{
    "name":         "less-inspector",
    "description":  "A script that can watch a directory and recompile your .less scripts if they change.",
    "keywords":     ["less", "reload", "watch", "inspector", "recompile", "css", "less-watcher", "less-inspector"],
    "author":       "amix",

    "contributors": [ 
        {
          "name": "Andrew Eremenko",
          "email": "feanir@me.com"
        } 
    ],

    "repository": {
        "type": "git",
        "url": "https://github.com/snusmubrik/less-inspector.git"
    },

    "version":      "1.1.5",
    "license": "MIT",

    "preferGlobal": true,

    "engines": {
        "node":            ">=0.2.0",
        "watcher_lib":     ">=1.1.0",
        "optimist":        ">=0.3.1"
    },

    "directories": {
        "lib" :       "./lib"
    },

    "main" :        "./lib/less-inspector.js",

    "bin": {
        "less-inspector":      "./bin/less-inspector"
    },
    "dependencies": {
      "optimist": ">=0.3.1",
      "watcher_lib": ">=1.1.0"
    }
}
